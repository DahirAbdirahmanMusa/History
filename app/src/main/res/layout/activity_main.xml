                android:text="@string/quiz_Four"
                android:textColor="#FF9800"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/QuestionOne4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/QuizNumber4"
                android:text="@string/question_four"
                android:textSize="27sp" />

            <Button
                android:id="@+id/choose13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/QuestionOne4"
                android:layout_marginTop="16dp"
                android:text="@string/answer13"
                android:onClick="fa"/>

            <Button
                android:id="@+id/choose14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose13"
                android:layout_marginTop="16dp"
                android:text="@string/answer14"
                android:onClick="fb"

                />

            <Button
                android:id="@+id/choose15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
