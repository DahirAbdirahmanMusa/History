<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/history"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           *** //quiz number one

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/Name"
                android:inputType="textPersonName"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/QuizNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name"
                android:padding="8dp"
                android:text="@string/quiz_one"
                android:textColor="#FF9800"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/QuestionOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/QuizNumber"
                android:text="@string/question_one"
                android:textSize="27sp"
                />


            <Button
                android:id="@+id/choose1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/QuestionOne"
                android:layout_marginTop="16dp"
                android:text="@string/answer1"
                android:onClick="oa"/>

            <Button
                android:id="@+id/choose2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose1"
                android:layout_marginTop="16dp"
                android:text="@string/answer2"
                android:onClick="ob"

                />

            <Button
                android:id="@+id/choose3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose2"
                android:layout_marginTop="16dp"
                android:text="@string/answer3"
                android:onClick="oc"/>

            <Button
                android:id="@+id/choose4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose3"
                android:layout_marginTop="16dp"
                android:text="@string/answer4"
                android:onClick="od"/>

            //Quiz number two

            <TextView
                android:id="@+id/QuizNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose4"
                android:padding="8dp"
                android:text="@string/quiz_TWO"
                android:textColor="#FF9800"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/QuestionOne2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/QuizNumber2"
                android:text="@string/question_two"
                android:textSize="27sp" />

            <Button
                android:id="@+id/choose5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/QuestionOne2"
                android:layout_marginTop="16dp"
                android:text="@string/answer5"
                android:onClick="tha"/>

            <Button
                android:id="@+id/choose6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose5"
                android:layout_marginTop="16dp"
                android:text="@string/answer6"
                android:onClick="thb"

                />

            <Button
                android:id="@+id/choose7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose6"
                android:layout_marginTop="16dp"
                android:text="@string/answer7"
                android:onClick="thc"/>

            <Button
                android:id="@+id/choose8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose7"
                android:layout_marginTop="16dp"
                android:text="@string/answer8"
                android:onClick="thd" />
            //quiz number 3

            <TextView
                android:id="@+id/QuizNumber3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/choose8"
                android:padding="8dp"
                android:text="@string/question_three"
                android:textColor="#FF9800"
                android:textSize="30sp"

                />

            <TextView
                android:id="@+id/QuestionOne3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/QuizNumber3"
